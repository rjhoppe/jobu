---
export interface Props {
  img?: string;
  alt?: string;
  title: string;
  text: string;
  href?: string;
  linkText?: string;
}

const { img, alt, title, text, href, linkText } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200">
  {img && (
    <img src={img} class="w-full h-32 object-cover rounded-t-lg mb-4" alt={alt || title}>
  )}
  
  <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
  <p class="text-gray-700 mb-4">{text}</p>
  
  {href && linkText && (
    <a 
      href={href} 
      target="_blank" 
      rel="noopener noreferrer"
      class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors duration-200 inline-block"
    >
      {linkText}
    </a>
  )}
</div> 