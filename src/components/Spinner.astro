---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  color?: 'blue' | 'green' | 'gray';
}

const { size = 'md', color = 'blue' } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-8 h-8',
  lg: 'w-12 h-12'
};

const colorClasses = {
  blue: 'text-blue-600',
  green: 'text-green-600',
  gray: 'text-gray-600'
};
---

<div class={`animate-spin rounded-full border-2 border-gray-300 border-t-current ${sizeClasses[size]} ${colorClasses[color]}`}></div> 